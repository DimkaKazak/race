<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="car_mapper">

    <select id="getById" resultMap="car_map">
        SELECT *
        FROM race.car
        WHERE idCar = #{id}
    </select>

    <select id="getAll" resultMap="car_map">
        SELECT * FROM race.car
    </select>

    <update id="update">
        UPDATE race.car SET
        type = #{type},
        description = #{description}
        WHERE idCar = #{id}
    </update>

    <delete id="deleteById">
        DELETE FROM race.car
        WHERE idCar = #{id}
    </delete>

    <insert id="create">
        INSERT INTO race.car (idCar, type, description)
        VALUES (#{id}, #{type}, #{description})
    </insert>

    <resultMap id="car_map" type="race.models.vehicles.Car" autoMapping="false">
        <id property="id" column="idCar" />
        <id property="idEngine" column="idEngine"/>
        <result property="type" column="type"/>
        <result property="description" column="description"/>
    </resultMap>
</mapper>