<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="car_mapper">

    <select id="getById" resultMap="client_map">
        SELECT *
        FROM race.road
        WHERE idRoad = #{id}
    </select>

    <select id="getAll" resultMap="client_map">
        SELECT * FROM race.road
    </select>

    <update id="update">
        UPDATE race.road SET
        totalDistance = #{totalDistance}
        WHERE idRoad = #{id}
    </update>

    <delete id="deleteById">
        DELETE FROM race.road
        WHERE idRoad = #{id}
    </delete>

    <insert id="create">
        INSERT INTO race.road (idRoad, totalDistance)
        VALUES (#{id}, #{totalDistance})
    </insert>

    <resultMap id="road_map" type="race.models.Road" autoMapping="false">
        <id property="id" column="idRoad" />
        <result property="totalDistance" column="totalDistance"/>
    </resultMap>
</mapper>