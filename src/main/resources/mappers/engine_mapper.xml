<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="engine_mapper">

    <select id="getById" resultMap="engine_map">
        SELECT *
        FROM race.engine as engine
        WHERE engine.idEngine = #{id}
    </select>

    <select id="getAll" resultMap="engine_map">
        SELECT * FROM race.engine
    </select>

    <update id="update">
        UPDATE race.engine SET
        maxSpeed = #{maxSpeed}
        WHERE idEngine = #{id}
    </update>

    <delete id="deleteById">
        DELETE FROM race.engine
        WHERE idEngine = #{id}
    </delete>

    <insert id="create">
        INSERT INTO race.engine (idEngine, maxSpeed)
        VALUES (#{id}, #{maxSpeed})
    </insert>

    <resultMap id="engine_map" type="race.models.components.engines.Engine" autoMapping="false">
        <id property="id" column="idEngine" />
        <result property="maxSpeed" column="maxSpeed"/>
    </resultMap>
</mapper>